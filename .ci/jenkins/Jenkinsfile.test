pipeline {
    agent {
        label 'ubuntu'
        docker {
            image 'quay.io/kiegroup/kie-tools-ci-build:PR-4-build-2'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    options {
        timeout(time: 10, unit: 'MINUTES')
    }

    stages {
        stage('Pre-check') {
            steps {
                sh """#!/bin/bash -el
                whoami
                java --version
                mvn --version
                node --version
                go version
                pnpm --version
                """.trim()
            }
        }
    }
}
